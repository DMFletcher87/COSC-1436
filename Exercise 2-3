//Purpose: averaging 3 numbers

//include statement(s)
#include <iostream>
//using namespace statement
using namespace std;

int main()
{

//variable declaration
int num1, num2, num3, average;

//executable statements
num1 = 125;
num2 = 28;
num3 = -25;

average = (num1 + num2 + num3)/3;

// Output Answer
cout << "Num1 = " << num1 << endl;
cout << "Num2 = " << num2 << endl;
cout << "Num3 = " << num3 << endl;
cout << "Average = " << average << endl;
//return 0;
return 0;
}
